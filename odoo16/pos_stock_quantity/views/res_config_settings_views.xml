<?xml version="1.0"?>
<odoo>
    <record id="l4l_pos_note_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l4l_pos_note</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2>Pos Stock</h2>
                <div class="row mt16 o_settings_container" id="pos_stock">
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         title="Show quantity available in POS.">
                        <div class="o_setting_left_pane">
                            <field name="show_qty_available"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_qty_available" string="Display Stock"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         title="Show quantity available in POS.">
                        <div class="o_setting_left_pane">
                            <field name="show_qty_available_res"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_qty_available_res"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         attrs="{'invisible':['|',('show_qty_available','=',False),('show_qty_available_res','=',False)]}">
                        <div class="o_setting_right_pane">
                            <label for="limit_qty" string="Min Quantity"
                                   attrs="{'invisible':[('allow_out_of_stock','=',True)]}"/>
                            <div class="text-muted" attrs="{'invisible':[('allow_out_of_stock','=',True)]}">
                                Deny order when available quantity lower than
                            </div>
                            <field name="limit_qty" attrs="{'invisible':[('allow_out_of_stock','=',True)]}"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         attrs="{'invisible':['|',('show_qty_available','=',False),('show_qty_available_res','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="allow_out_of_stock"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_out_of_stock" string="Allow Out-of-Stock"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         attrs="{'invisible':[('show_qty_available','=',False)]}">
                        <div class="o_setting_left_pane">
                            <field name="location_only"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="location_only" string="Only show quantity in POS location"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
