<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_wizard_form" model="ir.ui.view">
            <field name="name">purchase.wizard.form</field>
            <field name="model">purchase.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date"/>
                    </group>
                    <footer>
                        <button string="Update Purchase" type="object" class="oe_highlight" name="perform_action"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="purchase_wizard_wizard" model="ir.actions.act_window">
            <field name="name">Purchase Wizard</field>
            <field name="res_model">purchase.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_script.purchase_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_my_wizard" name="Purchase Wizard" parent="base.menu_administration" sequence="1"/>
        <menuitem id="menu_my_wizard_action" name="Purchase Wizard" parent="menu_my_wizard" action="purchase_wizard_wizard"/>

    </data>
</odoo>