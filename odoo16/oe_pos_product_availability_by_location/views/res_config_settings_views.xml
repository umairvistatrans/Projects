<?xml version="1.0"?>
<odoo>
    <record id="product_availability_by_location_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product_availability_by_location</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//div[@id="pos_inventory_section"]' position='inside'>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="oe_product_availability" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="oe_product_availability"/>
                        <div class="text-muted">
                            Show Product Availability By Location
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
