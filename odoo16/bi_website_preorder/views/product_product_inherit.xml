<?xml version="1.0"?>
<odoo>
    <record id="view_product_template_inherit_form" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_preorder"/>
                    <label for="is_preorder"/>
                </div>
            </xpath>
            <xpath expr="//notebook[1]/page[@name='sales']" position="after">
                <page string="Pre-Order"
                      attrs="{'invisible': [('is_preorder','=',False)]}" name="preorder">
                    <group string='Pre-Order Settings'>
                        <group>
                            <field name="preorder_expiry"
                                   attrs="{'required': [('is_preorder','=',True)]}"
                            />
                            <field name="is_default"/>
                            <field name="allowed_preorder_qty"
                                   attrs="{'required': [('is_preorder','=',True)],'readonly':[('is_preorder','=',False)]}"/>
                        </group>
                        <group>
                            <field name="preorder_payment_type"
                                   attrs="{'required': [('is_preorder','=',True)],'readonly':[('is_default','=',False)]}"

                            />
                            <label for="percent"
                                   attrs="{'invisible': [('preorder_payment_type','=','full')]}"/>
                            <div attrs="{'invisible': [('preorder_payment_type','=','full')]}">
                                <field name="percent" class="oe_inline"
                                       attrs="{'required': [('preorder_payment_type','=','full')]}"/>
                                <label for="percent" string="%"/>
                            </div>
                            <field name="minimum_preorder_qty"
                                   attrs="{'required': [('is_preorder','=',True)],'readonly':[('is_default','=',False)]}"/>
                            <field name="maximum_preorder_qty"
                                   attrs="{'required': [('is_preorder','=',True)],'readonly':[('is_default','=',False)]}"

                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
