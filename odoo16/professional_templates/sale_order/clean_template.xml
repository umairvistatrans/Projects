<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="SO_11_document" name="Clean Template">
        <t t-if="doc and 'company_id' in doc">
            <t t-set="company" t-value="doc.company_id"></t>
        </t>
        <t t-if="not doc or not 'company_id' in doc">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <div class="header" t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.header_font)}}px !important;font-family:{{style.font_family}} !important;"> 
            <div t-if="style.header" class="row mb-2" t-attf-style="border:2px solid {{style.theme_color}};">
                <div class="col-7 mt-2">
                    <t t-set="div_style" t-value="'background-color:{}; color: {};padding:8px;width:auto;display:inline-block;margin:8px;'.format(style.theme_color,style.theme_txt_color)"/>
                    <div t-if="doc.name" t-attf-style="{{div_style}}">
                        <strong>
                            <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                            <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                            <span t-else="">Order # </span>
                        </strong>
                        <span t-field="doc.name"/>
                    </div>
                    <div t-if="doc.date_order" t-attf-style="{{div_style}}">
                        <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
                        <strong t-else="">Order Date:</strong>
                        <span t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" t-attf-style="{{div_style}}">
                        <strong>Expiration: </strong>
                        <span t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.client_order_ref" t-attf-style="{{div_style}}">
                        <strong>Your Reference: </strong>
                        <span t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.user_id" t-attf-style="{{div_style}}">
                        <strong>Salesperson: </strong>
                        <span t-field="doc.user_id"/>
                    </div>
                </div>
                <div class="col-5 mb-2 text-end">
                    <div t-if="style.logo">
                        <img t-if="style.logo" t-att-src="image_data_uri(style.logo)" alt="Logo"/>
                    </div>
                    <div t-if="not style.logo">
                        <img  t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div class="d-inline-block mx-1" t-if="company.twitter or company.facebook or company.facebook" t-attf-style="background-color:{{style.theme_color}}; color:{{style.theme_txt_color}};">
                        <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square "/>&#160;<span t-field="company.twitter"/>
                        <span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square "/>&#160;<span t-field="company.facebook"/>
                        <span t-if="company.youtube" style="padding-left:13px;" class="fa fa-youtube-square "/>&#160;<span t-field="company.youtube" />
                    </div>
                </div>
            </div>
        </div> 
        <div class="article page" t-attf-data-oe-model="sale.order" t-attf-data-oe-id="{{doc.id}}" t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.body_font)}}px !important;font-family:{{style.font_family}} !important;">
            <h4 class="text-center" t-field="doc.name" t-if="doc.state not in ['cancel', 'draft']"></h4>
            <div class="col-12" t-attf-style="white-space:pre-line;color:#{style.wm_color};left:#{style.leftpadding}mm; top:#{style.toppadding}mm;font-size:#{style.fontsize}px; 
                opacity:#{style.opacity};z-index:-99; -webkit-transform:rotate(-#{style.rotate}deg);position:fixed;">
            <t t-esc="style.wm_eval(doc, time, user, res_company)"/>
        </div>
        <div class="row row-cols-3 mb-2">
            <div class="col">
                <div t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id" t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;">
                    Bill To:
                </div>
                <div t-if="doc.partner_shipping_id == doc.partner_id or not doc.partner_shipping_id" t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;">
                    Bill&#160;&amp;&#160;Ship To:
                </div>
                <div t-if="doc.partner_id" t-attf-style="color:{{style.cust_color}};font-size:{{int(style.body_font)+6}}px;font-weight:500;">
                    <t t-if="doc.partner_id.parent_id">
                        <span t-field="doc.partner_id.parent_id"/>, <span t-if="doc.partner_id.title" t-field="doc.partner_id.title"/> <span t-field="doc.partner_id.name"/>
                    </t>
                    <t t-if="not doc.partner_id.parent_id">
                        <span t-if="doc.partner_id.title" t-field="doc.partner_id.title"/> <span t-field="doc.partner_id"/>
                    </t>
                </div>
                <address t-field="doc.partner_id"  t-options='{"widget": "contact", "fields":["address","phone","email","website"],"no_marker": false}'/>
                <span t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></span>
            </div>
            <div class="col">
                <t t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id">
                    <div t-attf-style="font-size:{{int(style.body_font)+6}}px;font-weight:bold;">Ship To:</div>
                    <address t-field="doc.partner_shipping_id" 
                        t-options='{"widget": "contact", "fields":["name", "address","phone","email","website"],"no_marker": false}'/>
                    <span t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></span>
                </t>
            </div>
            <div class="col d-flex justify-content-end">
                <div style="width:auto;padding-left:15px;">
                    <div t-field="company.name" t-attf-style="color:{{style.name_color}};white-space:nowrap;font-size:{{int(style.header_font)+6}}px;font-weight:500;"/>
                    <address t-field="company.partner_id"  t-options='{"widget": "contact", "fields": ["address", "phone",  "email", "website"], "no_marker": true}'/>
                    <span t-if="company.vat">VAT: <span t-field="company.vat"/></span>
                </div>
            </div>
        </div>
        <t t-call="professional_templates.order_lines"/>
    </div>
    <div class="footer" t-attf-style="font-size:{{style.footer_font}}px !important;font-family:{{style.font_family}} !important;">
        <t t-call="professional_templates.company_footer"/>
    </div>
</template>
</odoo>
