<?xml version = "1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.commerce</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="46"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>7md Website</h2>
                <div class="row mt16 o_settings_container" id="map_view">
                    <div class="col-12 col-lg-6 o_setting_box" id="token_map_view">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Credentials</span>
                            <div class="content-group">
                                <div class="text-muted mb8">
                                    Set url, a login email and password for integration
                                </div>
                                 <label for="ex_company_id" string="Company: "/>
                                <field name="ex_company_id"/>
                                <br/>
                                 <label for="ex_website_url" string="Url: "/>
                                <field name="ex_website_url"/>
                                <br/>
                                <label for="ex_user_name" string="Email: "/>
                                <field name="ex_user_name"/>
                                <br/>
                                <label for="ex_location_id" string="Stock Location: "/>
                                <field name="ex_location_id"/>
                                <br/>
                                <label for="ex_password" string="Password: "/>
                                <field name="ex_password"/>
                                <br/>
                                <label for="last_sync_date" string="Last Sync Date: "/>
                                <field name="last_sync_date" />
                                <br/>
                                <label for="last_sync_date_set" string="Last Sync Date Sett: "/>
                                <field name="last_sync_date_set" readonly="1"/>

                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
