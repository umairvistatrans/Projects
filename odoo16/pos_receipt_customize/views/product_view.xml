<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form Product.Template -->
        <record id="view_inherit_product_template_form_0032" model="ir.ui.view">
            <field name="name">view.inherit.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <group>
                        <field name="arabic_name" placeholder="Arabic Name" nolabel="1"/>

                    </group>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form Product.Product -->
        <record id="view_inherit_product_product_form_001" model="ir.ui.view">
            <field name="name">view.inherit.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='sale_ok']" position="before">
                    <group>
                        <field name="arabic_name" placeholder="Arabic Name" nolabel="1"/>
                         <field name="product_attrs_name" invisible="1"/>
<!--                         <field name="free_per_location" invisible="1"/>-->
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>