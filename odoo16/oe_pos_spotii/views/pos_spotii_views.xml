<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_pos_spotii" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.pos.spotii</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <div id="other_devices" position="after">
                <div class="col-xs-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_spotii"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_spotii"/>
                        <div class="text-muted">
                            Allow Spotii on orders
                        </div>
                        <div class="content-group " attrs="{'invisible':[('allow_spotii','=',False)]}">
                            <div class="row mt16">
                                <label string="Spotii Product" for="spotii_product_id" class="col-lg-3 o_light_label"/>
                                <field name="spotii_product_id" attrs="{'required':[('allow_spotii','=',True)]}"/>
                            </div>
                            <div class="row">
                                <label string="Spotii %" for="spotii_pc" class="col-lg-3 o_light_label"/>
                                <field name="spotii_pc"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <record id="pos_payment_method_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="split_transactions" position="after">
                <field name="has_service_charge"/>
            </field>
        </field>
    </record>

</odoo>
