<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_shipping_orders_details_form_form" model="ir.ui.view">
        <field name="name">view.shipping_orders_details_form.form</field>
        <field name="model">shipping.order.lines</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="external_ref"/>
                            <field name="so_id"/>
                            <field name="cash_receiving_state"/>
                            <field name="delivery_id"/>
                            <field name="delivery_state"/>
                            <field name="partner_id"/>
                            <field name="payment_created"/>
                            <field name="payment_method_desc"/>
                            <field name="related_payment"/>
                        </group>
                        <group>
                            <field name="related_payment_vend"/>
                            <field name="rescheduled_date"/>
                            <field name="shipping_order_id"/>
                            <field name="shipping_price"/>
                            <field name="pos_order"/>
                            <field name="customer_email"/>
                            <field name="customer_mob_no"/>
                            <field name="line_state"/>
                            <field name="total_order_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_shipping_orders_details_form_tree" model="ir.ui.view">
        <field name="name">view.shipping_orders_details_form.tree</field>
        <field name="model">shipping.order.lines</field>
        <field name="arch" type="xml">
            <tree string="Shipping Order Lines">
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="cash_receiving_state"/>
                <field name="customer_email"/>
                <field name="shipping_order_id"/>
                <field name="shipping_price"/>
                <field name="payment_method_desc"/>
                <field name="total_order_price"/>
                <field name="line_state"/>
            </tree>
        </field>
    </record>
    <record id="action_shipping_orders_details_form_view" model="ir.actions.act_window">
        <field name="name">Shipping Orders Details [Advance]</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shipping.order.lines</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="action_shipping_orders_details_form_menuitem" name="Shipping Orders Details [Advance]"
              parent="sale.sale_menu_root"
              action="action_shipping_orders_details_form_view" sequence="889"/>
</odoo>
