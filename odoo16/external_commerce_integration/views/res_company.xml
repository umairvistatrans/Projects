<?xml version = "1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_company_form" model="ir.ui.view">
        <field name="name">inherit_view_company_form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="External Ecommerce Integration" name="external_ecommerce_integration">
                    <group>
                        <group>
                            <field name="is_ex_active" />
                            <field name="ex_website_url" />
                            <field name="ex_user_name" />
                            <field name="ex_password" />
                            <field name="ex_location_id" />
                            <field name="last_sync_date" />
                            <field name="last_sync_date_set" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
