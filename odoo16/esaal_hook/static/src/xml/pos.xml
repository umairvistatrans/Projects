<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='pos-receipt-contact']" position="inside">
            <t>
            <div class="esaal-branding" id="esaal-branding" style="display: none;">
				<div style="margin-top:8px;">Digital Receipt Powered by</div>
				<div class="esaal-branding">http://www.esaal.co</div>
				<div class="esaal-branding-qr" id="esaal-branding-qr" style="margin-left:30px;margin-top:16px;margin-right:30px; display: none;"></div>
				<script type="text/javascript">
					var qrCodeElement = document.createElement("img");
					qrCodeElement.setAttribute("src", "static/description/icon.png");
					qrCodeElement.setAttribute("height", "64");
					qrCodeElement.setAttribute("width", "64");
					qrCodeElement.setAttribute("src", "https://api.qrserver.com/v1/create-qr-code/?data=+http://www.esaal.co");
					document.getElementById("esaal-branding-qr").appendChild(qrCodeElement);
				</script>
            </div>
            </t>
        </xpath>
    </t>

    <t t-name="esaal_hook.ReceiptScreen"
    t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension"
    owl="1">
        <xpath expr="//div[@class='buttons']" position="after">
            <div class="my-3 esaal-partner-info" id="esaal-partner-info" style="display: none; border: 2px solid #ccc; padding: 8px;">
                <h2>Esaal Digital Receipt</h2>
                <div class="form-group mb-2">
                    <label for="esaal-partner-name" class="form-label">Customer Name <span class="text-danger">* </span></label>
                    <div style="width: 50%; padding: 10px;">
                        <input class="form-control partner-name" id="esaal-partner-name" name="name" placeholder="First Name* Last Name" required="true" style="width: 50%; border: 1px solid #ccc; padding: 8px;"/>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label for="esaal-partner-phone" class="form-label">Customer Phone <span class="text-danger">* </span></label>
                    <div style="width: 50%; padding: 10px;">
                        <input class="form-control esaal-partner-phone" id="esaal-partner-phone" name="phone" type="tel" placeholder="0501234567 or +971512345678" required="true" style="width: 50%; border: 1px solid #ccc; padding: 8px;"/>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label for="esaal-partner-email" class="form-label">Customer Email </label>
                    <div style="width: 50%; padding: 10px;">
                        <input class="form-control esaal-partner-email" id="esaal-partner-email" name="email" type="email" placeholder="example@mail.com" style="width: 50%; border: 1px solid #ccc; padding: 8px;"/>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label">Gender </label><span class="text-danger">*</span>
                    <br></br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="genderMale" value="male"/>
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="female"/>
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                </div>
                <div class="buttons">
                    <div class="button print" id="Esaal_print" t-on-click="printEsaal">
                        <i class="fa fa-paper-plane">
                            </i> Esaal Receipt
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>
