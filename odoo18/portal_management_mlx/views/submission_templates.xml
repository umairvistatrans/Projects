<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="submit_supplier">
        <t t-call="website.layout">
            <t t-set="additional_title">Submit Supplier Details</t>

            <div id="wrap" class="container">
                <h2 class="my-3">
                    Supplier Application Form
                </h2>

                <div id="supplier_section" class="container">
                    <div class="row">
                        <section id="forms" class="col-12 col-md-9" data-name="Form">
                            <div class="container">
                                <form id="supplier_submission_form" action="/requests/supplier/"
                                      method="POST" class="o_mark_required row"
                                      data-mark="*" data-model_name="submission.request" hide-change-model="true"
                                      enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="row s_col_no_bgcolor">
                                        <!-- Supplier Name -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="supplier_name">
                                                    <span>Your Name</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="supplier_name" type="text"
                                                           class="form-control"
                                                           name="supplier_name" required=""
                                                           data-fill-with="name"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="image_1920">
                                                    <span>Picture (optional)</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="file" name="image_1920" id="image_1920"
                                                           class="form-control"
                                                           accept=".jpg, .jpeg, .png"/>
                                                </div>
                                            </div>
                                        </div>


                                        <!-- Supplier Phone -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="supplier_phone">
                                                    <span>Phone Number</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="supplier_phone" type="tel"
                                                           class="form-control"
                                                           name="supplier_phone" required=""
                                                           data-fill-with="phone"/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Supplier Email -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="supplier_email">
                                                    <span>Email</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="supplier_email" type="email"
                                                           class="form-control"
                                                           name="supplier_email" required=""
                                                           data-fill-with="email"/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Supplier City -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="supplier_city">
                                                    <span>City</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="supplier_city" type="text"
                                                           class="form-control"
                                                           name="supplier_city" required=""
                                                           data-fill-with="city"/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Supplier Country -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="supplier_country">
                                                    <span>Country</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <select id="supplier_country"
                                                            class="form-control"
                                                            name="supplier_country" required="">
                                                        <t t-foreach="countries" t-as="country">
                                                            <option t-att-value="country.id" t-esc="country.name"/>
                                                        </t>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Supplier Address -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="supplier_address">
                                                    <span>Address</span>
                                                </label>
                                                <div class="col-sm">
                                                    <textarea id="supplier_address"
                                                              class="form-control"
                                                              name="supplier_address" rows="5"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                        <h3 class="my-3">
                                            Factory Details
                                        </h3>

                                        <!-- Factory Name -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="factory_name">
                                                    <span>Name</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="factory_name" type="text"
                                                           class="form-control" name="factory_name"
                                                           required=""/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Factory Location -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="factory_location">
                                                    <span>Location</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="factory_location" type="text"
                                                           class="form-control"
                                                           name="factory_location" required=""/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Factory Capacity -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="factory_capacity">
                                                    <span>Factory Capacity</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="factory_capacity" type="number"
                                                           class="form-control"
                                                           name="factory_capacity"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="factory_certifications">
                                                    <span>Certifications</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="factory_certifications" type="file"
                                                           class="form-control"
                                                           name="factory_certifications" multiple="multiple"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="factory_documents">
                                                    <span>Documents</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="factory_documents" type="file"
                                                           class="form-control"
                                                           name="factory_documents" multiple="multiple"/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row justify-content-end">
                                                <div class="col-sm-auto">
                                                    <button type="submit"
                                                            class="btn btn-primary btn-md"
                                                            id="apply-btn">
                                                        Submit
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </t>
    </template>

