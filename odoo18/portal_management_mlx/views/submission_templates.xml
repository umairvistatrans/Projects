    <template id="product_submission_prompt">
        <t t-call="website.layout">
            <t t-set="additional_title">Submit Product Details</t>

            <div id="wrap" class="container">
                <nav aria-label="breadcrumb" class="mt-5">
                    <ol class="breadcrumb ps-0 mb-0 pb-1">
                        <li class="breadcrumb-item">
                            <a href="/my/products" class="text-secondary fw-bold">Products</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Product Submission
                        </li>
                    </ol>
                </nav>

                <div id="product_prompt_section" class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8 mt-3 text-center">
                            <!-- First bold and larger message -->
                            <h3 class="fw-bold mb-3">
                                Would you also like to make a product submission?
                            </h3>
                            <!-- Noticeable banner-style prompt message -->
                            <div class="p-3 mb-1 text-dark rounded" style="background-color: #fff8db;">
                                <p class="lead mb-0">
                                    If you do not make a <strong>product submission now</strong>, then you will have to
                                    wait for the
                                    <strong>approval of your user</strong>, after which you will be granted access to
                                    the <strong>dashboard</strong>,
                                    from where you will be able to make any number of <strong>product
                                    submissions</strong>, along with
                                    <strong>factories</strong>
                                    and <strong>product categories</strong>.
                                </p>
                            </div>
                            <a t-att-href="'/requests/product?request_id=%s' % request_id"
                               class="btn btn-primary btn-md my-3">
                                Make a Product Submission
                            </a>
                            <a href="/"
                               class="btn btn-secondary btn-md my-3">
                                Return to Homepage
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="submit_product">
        <t t-call="website.layout">
            <t t-set="additional_title">Submit Product Details</t>

            <div id="wrap" class="container">
                <nav aria-label="breadcrumb" class="mt-5">
                    <ol class="breadcrumb ps-0 mb-0 pb-1">
                        <li class="breadcrumb-item">
                            <a href="/my/products" class="text-secondary fw-bold">Products</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <a t-attf-href="/requests/product">
                                Submit Product
                            </a>
                        </li>
                    </ol>
                </nav>
                <h1 class="mb-4">
                    Product Application Form
                </h1>

                <div id="product_section" class="container">
                    <div class="row">
                        <section id="forms" class="col-12 col-md-9">
                            <div class="container">
                                <form id="product_submission_form" action="/requests/product/" method="POST"
                                      class="o_mark_required row"
                                      data-mark="*" data-model_name="submission.request" hide-change-model="true"
                                      enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="request_id" t-att-value="request_id"/>
                                    <div class="row s_col_no_bgcolor">

                                        <!-- Product Model No -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="product_model_no">
                                                    <span>Product Model No</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="product_model_no" type="text"
                                                           class="form-control"
                                                           name="product_model_no" required=""/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Product Unique Identifier -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="product_unique_identifier">
                                                    <span>Product Unique Identifier</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="product_unique_identifier" type="text"
                                                           class="form-control"
                                                           name="product_unique_identifier" required=""/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Product Category -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="product_category">
                                                    <span>Product Category</span>
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-sm">
                                                    <select id="product_category"
                                                            class="form-control"
                                                            name="product_category" required="">
                                                        <t t-foreach="categories" t-as="category">
                                                            <option t-att-value="category.id" t-esc="category.name"/>
                                                        </t>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="product_documents">
                                                    <span>Documents</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="product_documents" type="file"
                                                           class="form-control"
                                                           name="product_documents" multiple="multiple"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto"
                                                       style="width: 200px" for="product_images">
                                                    <span>Images</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input id="product_images" type="file" accept=".jpg, .jpeg, .png"
                                                           class="form-control"
                                                           name="product_images" multiple="multiple"/>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="col-12 mb-0 py-2">
                                            <div class="row justify-content-end">
                                                <div class="col-sm-auto">
                                                    <button type="submit"
                                                            class="btn btn-primary btn-md"
                                                            id="apply-btn">
                                                        Submit
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </t>
    </template>
