<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_users_form_view_inherit_button" model="ir.ui.view">
        <field name="name">res.users.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_ids']" position="after">
                <field name="warehouse_ids" widget="many2many_tags"
                       options="{'no_quick_create': True, 'no_create_edit': True}"/>
            </xpath>
            <notebook position="inside">
                <page string="Point Of Sale">
                    <group>
                        <group>
                            <field name="display_sale_widget"/>
                        </group>
                        <group>
                            <field name="pos_config_ids" widget="many2many_tags"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="default_config_id"
                                   options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>


    <record id="pos_config_view_form_pos_advance" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[4]//div[@groups='base.group_system']" position="before">
                <h2>Sale Order Configuration</h2>
                <div class="col-12 col-lg-6 o_setting_box" id="so_configuration">
                    <div class="o_setting_left_pane">
                        <field name="allow_create_sale_order"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_create_sale_order"/>
                        <div class="text-muted">
                            Creates Sale order from POS
                        </div>
                        <div class="content-group" attrs="{'invisible': [('allow_create_sale_order', '=', False)]}">
                            <div class="mt16">
                                <div class="text-muted">
                                    Default State
                                </div>
                                <field name="pos_sale_order_state"
                                       attrs="{'required': [('allow_create_sale_order','=',True)]}"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box"
                         attrs="{'invisible': ['|', ('pos_sale_order_state', '!=', 'sale_order'),('allow_create_sale_order', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="allow_advance_payment"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_advance_payment"/>
                            <div class="text-muted">
                                Sale order advance payment.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
