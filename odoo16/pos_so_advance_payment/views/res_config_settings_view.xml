<?xml version="1.0"?>
<odoo>
    <record id="l4l_pos_note_res_config_settings_view_form_pos_so_order" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_sale_order</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2>Payment Method Sale Order</h2>
                <div class="row mt16 o_settings_container" id="pos_payment">
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         title="Show quantity available in POS.">
                        <div class="o_setting_left_pane">
                            <label for="sale_payment_method_ids" string="Payment Methods"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="sale_payment_method_ids" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
