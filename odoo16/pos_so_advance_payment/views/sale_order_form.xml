<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_sale_order_from_pos" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="pos_payment_method" string="Pos Payment Method" readonly="1"/>
                </field>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="pos_sales_person_id"/>
                </xpath>
            </field>
        </record>


        <!--    field added in invoice form view-->
        <record model="ir.ui.view" id="ol_create_so_from_pos_view_invoice_inherit">
            <field name="name">invoice.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_user_id']" position="after">
                    <field name="cashier"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>