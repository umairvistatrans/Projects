<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_account_invoice_tree">
            <field name="name">inherit.account.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="amount_untaxed_signed" position="after">
                    <field name="amount_untaxed_signed_pos" sum="Total"/>
                    <field name="amount_total_signed_pos" sum="Total"/>
                    <field name="amount_total_in_currency_signed_pos" sum="Total"/>
                </field>
                <field name="amount_untaxed_signed" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>
                <field name="amount_total_signed" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>

                <field name="amount_total_in_currency_signed" position="attributes">
                    <attribute name="optional">hide</attribute>
                </field>

            </field>
        </record>
    </data>
</odoo>