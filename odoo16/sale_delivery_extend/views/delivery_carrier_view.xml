<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='debug_logging']" position="after">
                <field name="delivery_pay_type" required="1"/>
                <field name="journal_id" required="1"/>

                <field name="portal_user_id"/>

                <field name="partner_id"
                       attrs="{'invisible': [('delivery_pay_type', '!=', 'hide_and_po')], 'required': [('delivery_pay_type', '=', 'hide_and_po')]}"
                       context="{'res_partner_search_mode':'supplier','show_address': 1, 'default_is_company': True, 'show_vat': True}"/>
                <field name="vendor_days"
                       attrs="{'invisible': [('delivery_pay_type', '!=', 'hide_and_po')], 'required': [('delivery_pay_type', '=', 'hide_and_po')]}"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Vendor Prices" attrs="{'invisible': [('delivery_pay_type', '!=', 'hide_and_po')]}">
                    <field name="delivery_period_ids">
                        <tree string="Vendor Prices" editable="bottom">
                            <field name="country_id"/>
                            <field name="state_id"/>
                            <field name="to_country_id"/>
                            <field name="to_state_id"/>
                            <field name="value"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>