<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="INVOICE_6_document" name="Band Template">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div class="header"
                 t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.header_font)}}px !important;font-family:{{style.font_family}} !important;">
                <div t-if="style.header">
                    <div class="row mb-2" t-attf-style="border-top:2px solid {{style.theme_color}};"/>
                    <div class="row mb-2">
                        <div class="col-5">
                            <strong>
                                <address t-field="company.partner_id"
                                         t-options='{"widget": "contact", "fields":["name","address","phone","email","website"],"no_marker": false}'/>
                            </strong>
                        </div>
                        <div class="col-7 text-end">
                            <div t-if="style.logo">
                                <img t-if="style.logo" t-att-src="image_data_uri(style.logo)" alt="Logo"/>
                            </div>
                            <div t-if="not style.logo">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                            </div>
                            <div class="d-inline-block px-1"
                                 t-if="company.twitter or company.facebook or company.facebook"
                                 t-attf-style="background-color:{{style.theme_color}};color:{{style.theme_txt_color}};">
                                <span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square "/>&#160;<span
                                    t-field="company.twitter"/>
                                <span t-if="company.facebook" style="padding-left:13px;"
                                      class="fa fa-facebook-square "/>&#160;<span t-field="company.facebook"/>
                                <span t-if="company.youtube" style="padding-left:13px;" class="fa fa-youtube-square "/>&#160;<span
                                    t-field="company.youtube"/>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!--end of Header-->
            <!-- START OF PAGE -->
<!--            <div class="row mb-2"-->
<!--                     t-attf-style="border-top:2px solid {{style.theme_color}}; border-bottom:2px solid {{style.theme_color}};"></div>-->
            <div class="article page" t-attf-data-oe-model="account.move" t-attf-data-oe-id="{{o.id}}"
                 t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.body_font)}}px !important;font-family:{{style.font_family}} !important;">
                <div class="row mb-2" t-attf-style="border-top:2px solid {{style.theme_color}};"/>
                <div class="col-12"
                     t-attf-style="white-space:pre-line;color:#{style.wm_color};left:#{style.leftpadding}mm; top:#{style.toppadding}mm;font-size:#{style.fontsize}px; opacity:#{style.opacity};z-index:-99; -webkit-transform:rotate(-#{style.rotate}deg);position:fixed;">
                    <t t-esc="style.wm_eval(o, time, user, res_company)"/>
                </div>
                <div class="row row-cols-3 mb-2">
                    <div class="col">
                        <span t-if="o.partner_shipping_id and o.partner_shipping_id != o.partner_id"
                              t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;">
                            Bill To:
                        </span>
                        <span t-if="o.partner_shipping_id == o.partner_id or not o.partner_shipping_id"
                              t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;">
                            Bill&#160;&amp;&#160;Ship To:
                        </span>
                        <div t-if="o.partner_id"
                             t-attf-style="color:{{style.cust_color}};font-size:{{int(style.body_font)+6}}px;font-weight:500;">
                            <t t-if="o.partner_id.parent_id">
                                <span t-field="o.partner_id.parent_id"/>,
                                <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>
                                <span t-field="o.partner_id.name"/>
                            </t>
                            <t t-if="not o.partner_id.parent_id">
                                <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>
                                <span t-field="o.partner_id"/>
                            </t>
                        </div>
                        <address t-field="o.partner_id" style="margin-bottom:0px;"
                                 t-options='{"widget": "contact", "fields":["address","phone","email","website"],"no_marker": false}'/>
                        <span t-if="o.partner_id.vat">VAT:
                            <span t-field="o.partner_id.vat"/>
                        </span>
                    </div>
                    <div class="col" t-if="o.partner_shipping_id and o.partner_shipping_id != o.partner_id">
                        <span t-attf-style="font-size:{{int(style.body_font)+6}}px;font-weight:bold;">Ship To:</span>
                        <address t-field="o.partner_shipping_id" style="margin-bottom:0px;"
                                 t-options='{"widget": "contact", "fields":["name", "address","phone","email","website"],"no_marker": false}'/>
                    </div>
                    <div class="col">
                        <div t-if="o.name">
                            <strong>
                                <span t-if="o.state == 'draft'">Draft</span>
                                <span t-if="o.state == 'cancel'">Cancelled</span>
                                <span t-if="o.move_type == 'out_invoice'">Invoice</span>
                                <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            </strong>
                            <span t-if="o.name != '/'" t-field="o.name"/>

                        </div>
                        <div t-if="o.invoice_date">
                            <t t-if="o.move_type == 'out_invoice'">
                                <strong>Invoice Date:</strong>
                            </t>
                            <t t-elif="o.move_type == 'out_refund'">
                                <strong>Credit Note Date:</strong>
                            </t>
                            <t t-elif="o.move_type == 'out_receipt'">
                                <strong>Receipt Date:</strong>
                            </t>
                            <t t-else="">
                                <strong>Date:</strong>
                            </t>
                            <span t-field="o.invoice_date"/>
                        </div>
                        <div t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'">
                            <strong>Due Date:</strong>
                            <span t-field="o.invoice_date_due"/>
                        </div>
                        <div t-if="o.invoice_origin">
                            <strong>Source:</strong>
                            <span t-field="o.invoice_origin"/>
                        </div>
                        <div t-if="o.partner_id.ref">
                            <strong>Customer Code:</strong>
                            <span t-field="o.partner_id.ref"/>
                        </div>
                        <div t-if="o.ref">
                            <strong>Reference:</strong>
                            <span t-field="o.ref"/>
                        </div>
                        <div t-if="o.cashier">
                            <strong>Cashier:</strong>
                            <span t-field="o.cashier.name"/>
                        </div>
                        <div t-if="o.payment_method_desc">
                            <strong>Payment:</strong>
                            <span t-field="o.payment_method_desc"/>
                        </div>
                    </div>
                    <div class="col">
                        <div style="text-align: right">
                            <strong>Tax Invoice</strong>
                        </div>
                        <div t-if="o.company_id.vat" style="text-align: right">
                            <strong>TRN number:</strong>
                            <span t-field="o.company_id.vat"/>
                        </div>

                    </div>
                </div>
                <div class="row mb-2"
                     t-attf-style="border-top:2px solid {{style.theme_color}}; border-bottom:2px solid {{style.theme_color}};">
                    <div class="col-4">
                        <h3>
                            <span t-if="o.state == 'draft'">Draft</span>
                            <span t-if="o.state == 'cancel'">Cancelled</span>
                            <span t-if="o.move_type == 'out_invoice'">Invoice:
                                <span t-field="o.name"/>
                            </span>
                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        </h3>


                    </div>
                    <div class="col-4">
                            <h3>
                            Total:
                            <span t-field="o.amount_total"/>
                        </h3>
                        </div>
                        <div class="col-4  text-end">
                        <h3>
                            Amount due:
                            <span t-field="o.amount_residual"/>
                        </h3>
                    </div>
                </div>
                <div class="row mb-2" t-attf-style="border-bottom:2px solid {{style.theme_color}};">
                    <div class="col-4 justify-content-start" style="text-align: center;">
                        <t t-if="o.name != '/'">
                            <img t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)"
                                 style="width:300px;height:50px;" alt="Barcode"/>
                            <p style="font-size:8px">
                                <t t-esc="o.name"/>
                            </p>
                        </t>
                    </div>
                    <t t-set="picking_names" t-value="o.get_picking_names()"/>
                    <t t-if="picking_names and o.move_type == 'out_invoice'">
                        <div class="row justify-content mb16">
                            <t t-foreach="picking_names" t-as="picking_name">
                                <div class="col-4" name="right_box">
                                    <img t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', picking_name, 600, 100)"
                                         style="width:300px;height:50px;" alt="Barcode"/>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
                <!-- DATA-->
                <t t-call="professional_templates.invoice_lines"/>
                <!--/DATA-->
            </div><!--End of PAGE-->
            <!--FOOTER -->
            <div class="footer"
                 t-attf-style="font-size:{{style.footer_font}}px !important;font-family:{{style.font_family}} !important;">
                <div class="row" t-attf-style="height:30px; background-color:{{style.theme_color}}"/>
                <t t-call="professional_templates.company_footer"/>
            </div>
            <!--/FOOTER-->
        </template>
    </data>
</odoo>
