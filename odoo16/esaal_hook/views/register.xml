<odoo>
    <record id="view_esaal_register_wizard_form" model="ir.ui.view">
        <field name="name">esaal.register.wizard.form</field>
        <field name="model">esaal.register.wizard</field>
        <field name="arch" type="xml">
            <form string="Registration Status">
                <group>
                    <field name="message" nolabel="1" colspan="2" style="white-space: pre-wrap;"/>
                </group>
                <footer>
                    <button string="Ok" type="object" name="action_close" class="btn-primary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_esaal_register_wizard" model="ir.actions.act_window">
        <field name="name">Registration Status</field>
        <field name="res_model">esaal.register.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_esaal_register_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
