<odoo>
    <data>


        <record id="view_rescheduled_shipping_line_form" model="ir.ui.view">
            <field name="name">view_rescheduled_shipping_line_form</field>
            <field name="model">reschedule.shipping.line</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="shipping_line_id" invisible="1" force_save="1"/>
                            </group>
                            <group></group>

                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirm" class="btn-primary" type="object"/>
                        OR
                        <button special="cancel" string="Cancel" class="btn-primary" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_rescheduled_shipping_line_view" model="ir.actions.act_window">
            <field name="name">Reschedule Shipping Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reschedule.shipping.line</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">

              </p><p>

              </p>
            </field>
        </record>


        <record id="view_shipping_order_form" model="ir.ui.view">
            <field name="name">view_shipping_order_form</field>
            <field name="model">shipping.order</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>

                        <button name="create_shipping_bill" string="Create Vendor bill" class="btn-primary" type="object" attrs="{'invisible':[('show_create_po','=',False)]}"/>
                        <button name="create_cod_payment" string="Create COD Payment" class="btn-primary" type="object" attrs="{'invisible':['|',('state','!=','completed'),('show_payment_created','=',False)]}"/>
                        <button name="close_button" string="Close" class="btn-primary" type="object" attrs="{'invisible':[('state','=','completed')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="in_progress,completed"/>
                        <field name="show_create_po" invisible="1"/>
                        <field name="show_payment_created" invisible="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="shipping_company_id"/>
                                <field name="date"/>

                                <field name="related_po" invisible="1" readonly="1" force_save="1"/>
                                <field name="related_bill" readonly="1" force_save="1"/>
                                <field name="related_payment" invisible="1" readonly="1" force_save="1"/>
                                <field name="carrier_id" readonly="1" force_save="1"/>
                                <field name="company_id" invisible="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="notes"/>
                            </group>
                        </group>
                        <group string="Shipping Order Lines">
                            <div>
                                <field name="order_ids">
                                    <tree editable="bottom">

                                        <field name="external_ref" readonly="1" force_save="1" string="Reference" optional="hide"/>
                                        <field name="so_id" string="SO" optional="hide"/>
                                        <field name="pos_order" string="SO" optional="hide"/>
                                        <field name="partner_id" string="Cust"/>
                                        <field name="customer_mob_no" string="Cust Mob" optional="hide"/>
                                        <field name="customer_email" string="Cust Email" optional="hide"/>
                                        <field name="delivery_id" string="Deliv"/>
                                        <field name="delivery_state" string="deliv state" optional="hide"/>
                                        <field name="route_id"/>
                                        <field name="shipping_price" string="Ship Price"/>
                                        <field name="related_payment_vend" string="Vend Paym" optional="hide"/>
                                        <field name="total_order_price" string="Tot Ord Price"/>
                                        <field name="related_payment" string="Cust Paym" optional="hide"/>
                                        <field name="payment_method_desc" string="Paym Method"/>
                                        <field name="notes" optional="hide"/>
                                        <button name="cash_receiving_button" string="Collect" type="object" attrs="{'invisible':['|','|',('payment_method_desc','!=','Cash On Delivery'),('cash_receiving_state','=','collected'),('line_state','=','cancelled')]}"/>
                                        <field name="cash_receiving_state" />
                                        <button name="order_received" string="Order Received" groups="sale_delivery_extend.shipping_order_line_approve" type="object" attrs="{'invisible':[('line_state','!=',False)]}"/>
                                        <!--<button name="processing" string="Processing" class="btn-primary" type="object" attrs="{'invisible':[('line_state','!=','order_received')]}"/>-->
                                        <button name="on_the_way" string="On The Way"  groups="sale_delivery_extend.shipping_order_line_approve" type="object" attrs="{'invisible':[('line_state','!=','order_received')]}"/>
                                        <button name="arrived" string="Arrived"  groups="sale_delivery_extend.shipping_order_line_approve" type="object" attrs="{'invisible':[('line_state','!=','on_the_way')]}"/>
                                        <button name="delivered" string="Delivered" groups="sale_delivery_extend.shipping_order_line_approve"  type="object" attrs="{'invisible':[('line_state','!=','arrived')]}"/>
                                        <button name="cancelled" string="Cancelled"  groups="sale_delivery_extend.shipping_order_line_approve" type="object" attrs="{'invisible':[('line_state','=','delivered')]}"/>
                                        <field name="line_state"/>
                                        <button name="rescheduled_date_button" string="Reschedule" type="object" attrs="{'invisible':['|',('line_state','!=','cancelled'),('rescheduled_date','!=',False)]}"/>
                                        <field name="rescheduled_date" readonly="1" string="Resched Date"/>
                                    </tree>
                                </field>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_shipping_order_tree" model="ir.ui.view">
            <field name="name">view_shipping_order_tree</field>
            <field name="model">shipping.order</field>
            <field name="arch" type="xml">
                <tree string="">

                    <field name="name"/>
                    <field name="shipping_company_id"/>
                    <field name="date"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <record id="action_shipping_order_view" model="ir.actions.act_window">
            <field name="name">Shipping Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shipping.order</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">

              </p><p>

              </p>
            </field>
        </record>

        <menuitem id="menu_shipping_order_view" name="Shipping Order" parent="sale.sale_order_menu" action="action_shipping_order_view" sequence="30"/>


         <record id="shipping_order_sequence" model="ir.sequence">
            <field name="name">Shipping Order Sequence</field>
            <field name="code">shipping.order.sequence</field>
            <field name="prefix">Sh.O/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
         </record>

    </data>
</odoo>