<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="SO_4_document" name="TVA Template">
            <!-- Multicompany -->
            <t t-if="doc and 'company_id' in doc">
                <t t-set="company" t-value="doc.company_id"></t>
            </t>
            <t t-if="not doc or not 'company_id' in doc">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div class="header" t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.header_font)}}px !important;font-family:{{style.font_family}} !important;">
                <div class="row mb-2" t-if="style.header">
                    <div class="col-5 p-2" t-attf-style="border:1px solid {{style.text_color}};">
                        <t t-call="professional_templates.company_address"/>
                    </div>
                    <div class="col-7">
                        <div class="text-end">
                            <div class="w-50 p-2 d-inline-block" t-attf-style="border: 1px solid {{style.text_color}};">
                                <strong t-if="doc.state in ['draft', 'sent']">Quotation Date:</strong>
                                <strong t-else="">Order Date:</strong>
                                <span t-if="doc.date_order" t-field="doc.date_order"></span>
                            </div>
                        </div>
                        <div class="text-end" t-if="style.logo">
                            <img t-if="style.logo" t-att-src="image_data_uri(style.logo)" alt="Logo"/>
                        </div>
                        <div class="text-end" t-if="not style.logo">
                            <img  t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </div>
                        <div class="text-end">
                            <div class="d-inline-block px-2 mb-2" t-if="company.twitter or company.facebook or company.youtube" t-attf-style="background-color:{{style.theme_color}}; color:{{style.theme_txt_color}};">
                                <i t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square "/>&#160;<span t-field="company.twitter"/>
                                <i t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square "/>&#160;<span t-field="company.facebook"/>
                                <i t-if="company.youtube" style="padding-left:13px;" class="fa fa-youtube-square "/>&#160;<span t-field="company.youtube" />
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!--end of Header-->
            <!-- START OF PAGE -->
            <div class="article page" t-attf-data-oe-model="sale.order" t-attf-data-oe-id="{{doc.id}}" t-attf-style="color:{{style.text_color}} !important;font-size:{{int(style.body_font)}}px !important;font-family:{{style.font_family}} !important;">
                <div class="col-12" t-attf-style="white-space:pre-line;color:#{style.wm_color};left:#{style.leftpadding}mm; top:#{style.toppadding}mm;font-size:#{style.fontsize}px; opacity:#{style.opacity};z-index:-99; -webkit-transform:rotate(-#{style.rotate}deg);position:fixed;"><t t-esc="style.wm_eval(doc, time, user, res_company)"/></div>
                <div class="row row-cols-3 mb-2 p-2" t-attf-style="border:1px solid {{style.text_color}}">
                    <div class="col p-2" >
                        <h4 id="title">
                            <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                            <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                            <span t-else="">Order # </span>
                            <span t-field="doc.name"/>
                        </h4>
                    </div>
                    <div  class="col">
                        <div class="p-2" t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id">
                            <div t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id">
                                <span t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;"><i class="fa fa-truck "/> Ship To:</span>
                            </div>
                            <address t-field="doc.partner_shipping_id" style="margin-bottom:0px;" t-options='{"widget": "contact", "fields": ["name", "address", "phone",  "email", "website"], "no_marker": false}'/>
                            <span t-if="doc.partner_id.vat">VAT: <span t-field="doc.partner_id.vat"/></span>
                        </div>
                    </div>
                    <div class="col p-2 text-end">
                        <div t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id" t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;">
                            <i class="fa fa-user "/> Bill To:</div>
                        <div t-if="doc.partner_shipping_id == doc.partner_id or not doc.partner_shipping_id" t-attf-style="font-size:{{int(style.body_font)+6}}px; font-weight:bold;">
                            <i class="fa fa-user"/> Bill&#160; &amp;&#160; <i class="fa fa-truck "/> Ship To:
                        </div>
                        <div t-if="doc.partner_id" t-attf-style="color:{{style.cust_color}};font-size:{{int(style.body_font)+6}}px;">
                            <t t-if="doc.partner_id.parent_id">
                                <span t-field="doc.partner_id.parent_id"/>, <span t-if="doc.partner_id.title" t-field="doc.partner_id.title"/> <span t-field="doc.partner_id.name"/>
                            </t>
                            <t t-if="not doc.partner_id.parent_id">
                                <span t-if="doc.partner_id.title" t-field="doc.partner_id.title"/> <span t-field="doc.partner_id"/>
                            </t>
                        </div>
                        <address t-field="doc.partner_id"  t-options='{"widget": "contact", "fields": ["address", "phone",  "email", "website"], "no_marker": true}'/>
                        <div t-if="doc.partner_id.vat">VAT: </div><div t-field="doc.partner_id.vat"/>
                    </div>
                </div>
                <div class="row row-cols-5 mb-2 p-2" t-attf-style="border:1px solid {{style.text_color}};">
                    <div class="col" t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                        <strong>Expiration:</strong>
                        <p t-field="doc.validity_date"/>
                    </div>
                    <div class="col" t-if="doc.client_order_ref">
                        <strong>Your Reference:</strong>
                        <p t-field="doc.client_order_ref"/>
                    </div>
                    <div class="col" t-if="doc.user_id">
                        <strong>Salesperson:</strong>
                        <p t-field="doc.user_id"/>
                    </div>
                </div>
                <!-- DATA-->
                <t t-call="professional_templates.order_lines"/>
                    <!--/DATA-->
            </div><!--End of PAGE-->
            <!--FOOTER -->
            <div class="footer" t-attf-style="font-size:{{style.footer_font}}px !important;font-family:{{style.font_family}} !important;">
                <t t-call="professional_templates.company_footer"/>
            </div>
            <!--/FOOTER-->

        </template>
    </data>
</odoo>
