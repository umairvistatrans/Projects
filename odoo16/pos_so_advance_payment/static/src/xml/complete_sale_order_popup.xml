<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CreateCompleteSaleOrderPopupWidget" owl="1">
        <div class="popup" style="height:200px">
            <header class="title drag-handle">
                <t t-esc="props.title" />
            </header>
            <div class="content-container">
                <p style="margin: 20px;font-size: 22px;float: left;">Sale Order Ref : <t t-esc="props.order_ref" />
                </p>
            </div>
            <footer class="footer" style="padding-top:57px">
                <hr style="border:1px solid #E5E4E2"></hr>
                <div class="button cancel" t-on-click="confirm">
                    <div>
                        <t t-esc="props.confirmText" />
                    </div>
                </div>
            </footer>
        </div>
    </t>

</templates>