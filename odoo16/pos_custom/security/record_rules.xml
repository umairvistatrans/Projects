<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_admin_warehouse" model="res.groups">
            <field name="name">Warehouse Employee</field>
            <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
        </record>

        <!-- Record Rule for Own POS Orders -->
        <record id="record_rule_pos_order_own" model="ir.rule">
            <field name="name">Own POS Orders</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>

        <record id="record_rule_sale_order_own" model="ir.rule">
            <field name="name">Own Sale Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="record_rule_invoices_own" model="ir.rule">
            <field name="name">Own Invoices</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">[('invoice_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>


        <record id="record_rule_allowed_users" model="ir.rule">
            <field name="name">Restrict POS Configs to User Shops</field>
            <field name="model_id" ref="point_of_sale.model_pos_config"/>
            <field name="domain_force">[('id', 'in', user.pos_config_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
        </record>


    </data>
</odoo>

