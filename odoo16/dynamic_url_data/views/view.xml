<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_dynamic_url_data" model="ir.ui.view">
        <field name="name">res.config.settings.view.dynamic.url.data</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="oe_login_signup.res_config_settings_view_homepage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='custom_setting_website_homepage']" position="inside">
                <div class="col-xs-12 row o_settings_container" id="dynamic_url_data_limit">
                    <h2>Limit For Best Selling And New Arrival On Homepage</h2>
                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-12"
                                           string="Limit of product to be shown on Homepage for Best Seller."
                                           for="top_selling_limit"/>
                                    <field name="top_selling_limit"/>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-12"
                                           string="Limit of product to be shown on Homepage for New Arrival."
                                           for="new_arrival_limit"/>
                                    <field name="new_arrival_limit"/>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-12"
                                           string="Select creation days in which the product will be considered as New Arrival"
                                           for="new_arrival_days"/>
                                    <field name="new_arrival_days"/>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-12"
                                           string="Select product limit for the sale page which will be shown on sale(discount) page"
                                           for="sale_discount_limit"/>
                                    <field name="sale_discount_limit"/>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>