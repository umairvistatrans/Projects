    <record id="stock_card_report" model="ir.actions.report">
        <field name="name">Stock card</field>
        <field name="model">wizard.stock_card_wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hyd_stock_card.stock_card_template</field>
        <field name="report_file">hyd_stock_card.stock_card_template</field>
        <field name="print_report_name">Stock card
        </field>
        <field name="binding_type">report</field>
    </record>

    <template id="stock_card_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">

                    <style>
                        table {
                        border-collapse: collapse;
                        }
                        th,td {
                        border: 1px solid #cecfd5;
                        padding: 10px 15px;
                        }

                        .alnright { text-align: right; }

                    </style>

                    <table width="80%">
                        <tbody>
                            <tr>
                                <td style="border-top: 0; border-right: 0; border-left: 0;" colspan="2">
                                    <b>Warehouse</b>
                                </td>
                                <td style="border-top: 0; border-right: 0; border-left: 0;" colspan="2">
                                    <span t-esc="data['warehouse']"/>
                                </td>
                            </tr>
                            <tr>
                                <t t-if="data['filter_title_label']">
                                    <td style="border-top: 0; border-right: 0; border-left: 0;">
                                        <b>Location</b>
                                    </td>
                                    <td style="border-top: 0; border-right: 0; border-left: 0;">
                                        <span t-esc="data['location']"/>
                                    </td>
                                    <td style="border-top: 0; border-right: 0; border-left: 0;">
                                        <b>
                                            <span t-esc="data['filter_title_label']"/>
                                        </b>
                                    </td>
                                    <td style="border-top: 0; border-right: 0; border-left: 0;">
                                        <span t-esc="data['filter_title_value']"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td style="border-top: 0; border-right: 0; border-left: 0;" colspan="2">
                                        <b>Location</b>
                                    </td>
                                    <td style="border-top: 0; border-right: 0; border-left: 0;" colspan="2">
                                        <span t-esc="data['location']"/>
                                    </td>
                                </t>
                            </tr>
                            <tr>
                                <td style="border-top: 0; border-right: 0; border-left: 0;">
                                    <b>Date from</b>
                                </td>
                                <td style="border-top: 0; border-right: 0; border-left: 0;">
                                    <span t-esc="data['date_from']"/>
                                </td>
                                <td style="border-top: 0; border-right: 0; border-left: 0;">
                                    <b>Date to</b>
                                </td>
                                <td style="border-top: 0; border-right: 0; border-left: 0;">
                                    <span t-esc="data['date_to']"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <br/>
                    <br/>

                    <table width="100%">
                        <thead>
                            <tr>
                                <td>
                                    <b>Reference</b>
                                </td>
                                <td>
                                    <b>Designation</b>
                                </td>
                                <td>
                                    <b>UoM</b>
                                </td>
                                <td>
                                    <b>Initial stock</b>
                                </td>
                                <td>
                                    <b>In</b>
                                </td>
                                <td>
                                    <b>Out</b>
                                </td>
                                <td>
                                    <b>Balance</b>
                                </td>
                                <td>
                                    <b>Final Stock</b>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="data['lines']" t-as="categ">
                                <t t-if="data['group_by_category']">
                                    <tr>
                                        <td class="category" colspan="8">Category:
                                            <span t-esc="categ['name']"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr t-foreach="categ['lines']" t-as="line">
                                    <td>
                                        <span t-esc="line['ref']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['name']"/>
                                    </td>
                                    <td>
                                        <span t-esc="line['uom']"/>
                                    </td>
                                    <td class='alnright'>
                                        <span t-esc="line['si']"/>
                                    </td>
                                    <td class='alnright'>
                                        <span t-esc="line['in']"/>
                                    </td>
                                    <td class='alnright'>
                                        <span t-esc="line['out']"/>
                                    </td>
                                    <td class='alnright'>
                                        <b>
                                            <span t-esc="line['bal']"/>
                                        </b>
                                    </td>
                                    <td class='alnright'>
                                        <span t-esc="line['fi']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

</odoo>