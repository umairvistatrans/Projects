<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="subscription_config_form_view" model="ir.ui.view">
            <field name="name">subscription.config.form</field>
            <field name="model">subscription.config</field>
            <field name="arch" type="xml">
                <form string="Subscriptions">
                    <header>
                        <button name="reset_to_draft" string="Reset Draft" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_activate" string="Activate" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="price_list_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="create_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="subscription_start_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="subscription_end_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
                </form>
            </field>
        </record>

        <record id="subscription_config_tree_view" model="ir.ui.view">
            <field name="name">subscription.config.tree</field>
            <field name="model">subscription.config</field>
            <field name="arch" type="xml">
                <tree string="Subscriptions">
                    <field name="customer_id"/>
                    <field name="product_id"/>
                    <field name="price_list_id" invisible="1"/>
                    <field name="create_date"/>
                    <field name="subscription_start_date"/>
                    <field name="subscription_end_date"/>
                </tree>
            </field>
        </record>


        <record id="subscription_config_act_window" model="ir.actions.act_window">
            <field name="name">Subscriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">subscription.config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Subscriptions" id="subscription_config_menu" parent="website_sale_loyalty.menu_loyalty"
                  action="subscription_config_act_window"/>

    </data>
</odoo>