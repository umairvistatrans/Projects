<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sync_with_website_wiz" model="ir.ui.view">
        <field name="name">Website Sync Start</field>
        <field name="model">res.website.sync</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <footer>
                        <button string="Sync Brand" class="oe_highlight"
                                type="object" name="sync_brand"/>

                         <button string="Sync Category" class="oe_highlight"
                                type="object" name="sync_categ"/>

                         <button string="Sync Product" class="oe_highlight"
                                type="object" name="sync_product"/>

                         <button string="Sync Customer" class="oe_highlight"
                                type="object" name="sync_customer"/>

                         <button string="Sync Orders" class="oe_highlight"
                                type="object" name="sync_orders"/>
                        <button string="Cancel" class="oe_highlight"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_view_sync_with_website_wiz" model="ir.actions.act_window">
        <field name="name">Website Sync Start</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.website.sync</field>
        <field name="view_id" ref="view_sync_with_website_wiz"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_view_sync_with_website_wiz"
              name="Website Sync" parent="external_commerce_integration.menu_website_sync"
              action="action_view_sync_with_website_wiz" groups="purchase.group_purchase_manager"/>


</odoo>