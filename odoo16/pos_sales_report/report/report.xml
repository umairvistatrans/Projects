<?xml version="1.0"?>
<odoo>
    <template id="external_layout_p45_print">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!--  Multicompany  -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div t-attf-class="header o_company_#{company.id}_layout">
            <div style="width:100%;height:100px;clear:both;padding:8px 40px">

                <div style="float:left">
                    <img src="/p45_print/static/images/logo.png"
                         alt="Logo" height="90px" width="200px"/>
                </div>
                <div style="float:right">
                    <div>
                        <div style="font-size:14pt;font-weight:bold;text-align:right">
                            <span>P45 Part 1</span>
                            <br/>
                            <span>Details of employee leaving work</span>
                            <br/>
                            <span style="font-size:12pt;font-weight:normal;">Copy for HM Revenue and Customs</span>
                        </div>
                    </div>
                </div>
            </div>
            <div style="width:93.5%;height:10px; background-color:#000;margin-left:30px;"></div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>


        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div t-if="report_type == 'pdf'" class="text-muted">
                Page:
                <span class="page"/>
                /
                <span class="topage"/>
            </div>
        </div>
    </template>

