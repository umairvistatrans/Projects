<?xml version="1.0"?>
<odoo>
    <record id="product_availability_by_location_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product_availability_by_location</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_bills_and_receipts_section']" position="after">
                <div class="row mt16 o_settings_container" id="receipt-customisation-container">
                    <div class="col-xs-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_spotii"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_spotii"/>
                            <div class="text-muted">
                                Allow Spotii on orders
                            </div>
                            <div class="content-group " attrs="{'invisible':[('allow_spotii','=',False)]}">
                                <div class="row mt16">
                                    <label string="Spotii Product" for="spotii_product_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="spotii_product_id" attrs="{'required':[('allow_spotii','=',True)]}"/>
                                </div>
                                <div class="row">
                                    <label string="Spotii %" for="spotii_pc" class="col-lg-3 o_light_label"/>
                                    <field name="spotii_pc"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
