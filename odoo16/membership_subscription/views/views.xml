<odoo>
    <data>
        <record id="inherit_product_template_form" model="ir.ui.view">
            <field name="name">inherit_product_template_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="//field[@name='detailed_type']" position="after">-->
                <xpath expr="//page[@name='variants']" position="after">
                    <page string="Subscription" name="subscription"
                          attrs="{'invisible': [('detailed_type', '!=', 'service')]}">
                        <group>
                            <group>
                                <field name="is_subscription"/>
                                <field name="subscription_type"
                                       attrs="{'required': [('is_subscription', '=', True)]}"/>
                                <field name="validity_type"/>
                                        <field name="validity_count"/>
                                <field name="pricelist_id"/>
                                <field name="subscription_option_lines">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>