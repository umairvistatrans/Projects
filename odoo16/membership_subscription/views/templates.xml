<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="membership_subscription.membership_subscription"
        name="membership and subscription">
        <t t-call="website.layout">
            <section class="bg-white py-2 breadcrumb-section mb-4 pricing-section-custom">
                <div class="container">
                    <div class="row">
                        <t t-foreach="product_ids" t-as="product">
                            <t t-if="product.subscription_type == '7md_subscription'">
                                <div class="col-md-4 col-sm-6 mx-auto mt-5">
                                    <div class="pricingTable">
                                        <div class="pricingTable-header"
                                            style="background: rgb(217, 160, 55);">
                                            <h3 class="title">
                                                <span t-field="product.name" />
                                            </h3>
                                        </div>
                                        <ul class="pricing-content">
                                            <t t-foreach="product.subscription_option_lines"
                                                t-as="line">
                                                <li>
                                                    <span t-field="line.name" />
                                                </li>
                                            </t>
                                        </ul>
                                        <div class="price-value">
                                            <span class="amount" t-field="product.list_price" />
                                            <span class="duration">per month</span>
                                        </div>
                                        <div class="pricingTable-signup"
                                            style="background: rgb(217, 160, 55);">

                                            <form action="/shop/cart/update" method="post">
                                                <input type="hidden" name="csrf_token"
                                                    t-att-value="request.csrf_token()" />
                                                <input type="hidden" name="product_id"
                                                    t-att-value="product.product_variant_id.id" />
                                                <button type="submit" role="button">
                                                    <strong> Get Now</strong>
                                                </button>
                                            </form>
                                            <!--                                            <a-->
                                            <!--
                                            href="https://www.7md.ae/en/membership/checkout/eyJpdiI6ImpLQU1TaHFXTXNOb2NPMXFIU2dPWkE9PSIsInZhbHVlIjoidVZ6eEFVYm5TRHk5dmdpbGx6MnIxQT09IiwibWFjIjoiZTdmY2YyYzZlZjg1MzEwNGYxN2QwNDMwMDE3NWM4MGVmMjczYWRkYWRmY2U4N2ZiNmI5MTY2ZDJjYmY4MmJlMyIsInRhZyI6IiJ9">-->
                                            <!--                                                Get-->
                                            <!--                                                Now-->
                                            <!--                                            </a>-->
                                        </div>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="col-md-4 col-sm-6 mx-auto mt-5">
                                    <div class="pricingTable">
                                        <div class="pricingTable-header"
                                            style="background: rgb(37, 26, 5);">
                                            <h3 class="title">
                                                <span t-field="product.name" />
                                            </h3>
                                        </div>
                                        <ul class="pricing-content">
                                            <t t-foreach="product.subscription_option_lines"
                                                t-as="line">
                                                <li>
                                                    <span t-field="line.name" />
                                                </li>
                                            </t>
                                        </ul>
                                        <div class="price-value">
                                            <span class="amount" t-field="product.list_price" />
                                            <span class="duration">per month</span>
                                        </div>
                                        <div class="pricingTable-signup"
                                            style="background:rgb(37, 26, 5); text-align: center;">
                                            <form action="/shop/cart/update" method="post">
                                                <input type="hidden" name="csrf_token"
                                                    t-att-value="request.csrf_token()" />
                                                <input type="hidden" name="product_id"
                                                    t-att-value="product.product_variant_id.id" />
                                                <button type="submit" role="button">
                                                    <strong> Get Now</strong>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </div>
                </div>
            </section>
        </t>
    </template>
</odoo>